<?xml version="1.0"?>
<odoo>
    <!-- CRM Lead Proposal ACTIONS -->
    <record id="crm_lead_proposal_action" model="ir.actions.act_window">
        <field name="name">CRM Lead Proposal</field>
        <field name="res_model">crm.lead.proposal</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="direct_cost_action" model="ir.actions.act_window">
        <field name="name">Direct Cost</field>
        <field name="res_model">direct.cost</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="pricing_line_action" model="ir.actions.act_window">
        <field name="name">Pricing Line</field>
        <field name="res_model">pricing.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- CRM Lead Proposal VIEWS -->
    <record id="crm_lead_proposal_view_list" model="ir.ui.view">
        <field name="name">crm.lead.proposal.list</field>
        <field name="model">crm.lead.proposal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="crm_lead_id"/>
                <field name="proposal_number"/>
                <field name="direct_cost_ids"/>
                <field name="pricing_line_ids"/>
                <field name="overhead_margin"/>
                <field name="profit_margin"/>
                <field name="total_direct_cost"/>
                <field name="total_pricing_line"/>
            </list>
        </field>
    </record>

    <record id="direct_cost_view_list" model="ir.ui.view">
        <field name="name">direct.cost.list</field>
        <field name="model">direct.cost</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="pricing_line_view_list" model="ir.ui.view">
        <field name="name">pricing.line.list</field>
        <field name="model">pricing.line</field>
        <field name="arch" type="xml">
            <list>
                <!-- <field name="crm_lead_proposal_id"/> -->
                <field name="employee_id"/>
                <field name="hourly_cost"/>
                <field name="planned_hours"/>
                <field name="flight_cost"/>
                <field name="night_cost"/>
                <field name="perdiem_cost"/>
            </list>
        </field>
    </record>

</odoo>