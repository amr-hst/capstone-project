<?xml version="1.0"?>
<odoo>
    <!-- CRM Lead Proposal ACTIONS -->
    <record id="crm_lead_proposal_action" model="ir.actions.act_window">
        <field name="name">CRM Lead Proposal</field>
        <field name="res_model">crm.lead.proposal</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="direct_cost_action" model="ir.actions.act_window">
        <field name="name">Direct Cost</field>
        <field name="res_model">direct.cost</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="pricing_line_action" model="ir.actions.act_window">
        <field name="name">Pricing Line</field>
        <field name="res_model">pricing.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- CRM Lead Proposal VIEWS -->
    <record id="crm_lead_proposal_view_list" model="ir.ui.view">
        <field name="name">crm.lead.proposal.list</field>
        <field name="model">crm.lead.proposal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="crm_lead_id"/>
                <field name="proposal_number"/>
                <field name="direct_cost_ids"/>
                <field name="pricing_line_ids"/>
                <field name="overhead_fixed"/>
                <field name="overhead_margin_fixed" invisible="not overhead_fixed"/>
                <field name="overhead_margin_percentage" invisible="overhead_fixed"/>
                <field name="profit_margin"/>
                <field name="total_direct_cost"/>
                <field name="total_pricing_line"/>
            </list>
        </field>
    </record>

    <record id="crm_lead_proposal_view_form" model="ir.ui.view">
        <field name="name">crm.lead.proposal.form</field>
        <field name="model">crm.lead.proposal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group cols="1" colspan="1" nolabel="1">
                        <div class="oe_title" colspan="2">
                            <h1>
                                <field name="name" readonly="submitted"/>
                            </h1>
                        </div>
                        <field name="crm_lead_id" readonly="1"/>
                        <separator string="Direct Costs"/>
                        <field name="direct_cost_ids" string="Direct Prices" nolabel="1" readonly="submitted"/>
                        <separator string="Pricing Lines"/>
                        <field name="pricing_line_ids" nolabel="1" readonly="submitted"/>
                        <field name="overhead_fixed" readonly="submitted"/>
                        <field name="overhead_margin_fixed" invisible="not overhead_fixed" readonly="submitted"/>
                        <field name="overhead_margin_percentage" widget="percentage" invisible="overhead_fixed" readonly="submitted"/>
                        <field name="profit_margin" widget="percentage" readonly="submitted"/>
                        <field name="total_direct_cost" readonly="1"/>
                        <field name="total_pricing_line" readonly="1"/>
                        <field name="final_project_cost" readonly="1"/>
                        <button name="action_submit" string="Submit" type="object" invisible="submitted"/>
                        <button name="action_withdraw" string="Withdraw" type="object" invisible="not submitted"/>
                        <field name="submitted" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="direct_cost_view_list" model="ir.ui.view">
        <field name="name">direct.cost.list</field>
        <field name="model">direct.cost</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="direct_cost_view_form" model="ir.ui.view">
        <field name="name">direct.cost.form</field>
        <field name="model">direct.cost</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pricing_line_view_list" model="ir.ui.view">
        <field name="name">pricing.line.list</field>
        <field name="model">pricing.line</field>
        <field name="arch" type="xml">
            <list>
                <!-- <field name="crm_lead_proposal_id"/> -->
                <field name="employee_id"/>
                <field name="hourly_cost"/>
                <field name="planned_hours"/>
                <field name="flight_cost"/>
                <field name="night_cost"/>
                <field name="perdiem_cost"/>
            </list>
        </field>
    </record>
    
    <record id="pricing_line_view_form" model="ir.ui.view">
        <field name="name">pricing.line.form</field>
        <field name="model">pricing.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="hourly_cost"/>
                        </group>
                        <group>
                            <field name="planned_hours"/>
                            <field name="flight_cost"/>
                            <field name="night_cost"/>
                            <field name="perdiem_cost"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>